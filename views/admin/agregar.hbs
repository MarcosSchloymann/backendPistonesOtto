<div class="contenedor" style="display: flex; flex-direction: column; align-items: center;margin-top:10px; padding: 30px;">
    <div style="width: 600px;">
        <h1 class="text-center">Agregar Producto</h1>
        <form action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="text-center" style="font-size: 16px;">Imagen
                    <input type="file" class="form-control" name="imagen" id="imagen"/>
                </label>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label" style="font-size: 16px;">Título</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="" name="titulo">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label" style="font-size: 16px;">Subtítulo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder=""
                        name="subtitulo">
                </div>
            </div>
            <div class="row mb-3">
            </div>
            <button type="submit" class="btn btn-primary" style="margin-left:500px">Guardar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
</div>
</div>