<div class="contenedor" style="display: flex; flex-direction: column; align-items: center;margin-top:10px; padding: 30px;">
    <div style="width: 600px;">
        <h1 class="text-center" style="padding: 30px;">modificar Producto</h1>
        <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{producto.id}}" name="id" >
            {{!-- <div class="row mb-3">
                <label class="text-center" style="font-size: 16px;">Imagen
                    <input type="file" class="form-control" name="imagen" id="imagen"/>
                </label>
            </div> --}}
            <div class="row mb-3">
                <label for="inputimg" class="col-sm-2 col-form-label" style="font-size: 16px;">Imágen</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="imagen" id="imagen">
                </div>
                <p class="text-end">
                    <label style="padding: 30px;"><input type="checkbox" name="img_delete" id="img_delete" value="1" >
                        Eliminar imágen actual?</label>
                    <input type="hidden" name="img_original" value="{{producto.img_id}}">
                </p>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label" style="font-size: 16px;">Título</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="" name="titulo" value="{{producto.titulo}}">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label" style="font-size: 16px;">Subtítulo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder=""
                        name="subtitulo" value="{{producto.subtitulo}}">
                </div>
            </div>
            <div class="row mb-3">
            </div>
            <button type="submit" class="btn btn-primary" style="margin-left:500px">Guardar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
</div>
</div>